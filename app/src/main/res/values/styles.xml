<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background</item>
        <item name="background">@color/action_bar_background</item>
        <item name="android:backgroundStacked">@color/action_bar_background</item>
        <item name="backgroundStacked">@color/action_bar_background</item>
    </style>
    <style name="ProfileEditText">
        <item name="android:layout_marginBottom">@dimen/profile_edit_text_margin</item>
    </style>
</resources>
